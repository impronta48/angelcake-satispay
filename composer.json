{
    "name": "your-name-here/satispay",
    "description": "Satispay plugin for CakePHP",
    "type": "cakephp-plugin",
    "license": "MIT",
    "require": {
        "php": ">=7.2",
        "cakephp/cakephp": "^4",
        "satispay/gbusiness-api-php-sdk": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5 || ^9.3"
    },
    "autoload": {
        "psr-4": {
            "Satispay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Satispay\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    }
}
